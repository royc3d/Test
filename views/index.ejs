<%- include('partials/header', { title: 'Vnos transakcij', user: user }) %>
<h1>Vnos transakcij</h1>
<form action="/transaction" method="POST" class="mt-3">
  <div class="mb-3">
    <label for="date" class="form-label">Datum:</label>
    <input type="date" name="date" id="date" class="form-control" required value="<%= new Date().toISOString().split('T')[0] %>">
  </div>
  <div class="mb-3">
    <label for="type" class="form-label">Tip transakcije:</label>
    <select name="type" id="type" class="form-select">
      <option value="prihodek">Prihodek</option>
      <option value="odhodek">Odhodek</option>
      <option value="investicija">Investicija</option>
    </select>
  </div>
  <div class="mb-3">
    <label for="amount" class="form-label">Znesek:</label>
    <input type="number" step="0.01" name="amount" id="amount" class="form-control" required>
  </div>
  <div class="mb-3">
    <label for="category" class="form-label">Kategorija:</label>
    <select name="category" id="category" class="form-select">
      <% categories.forEach(function(cat) { %>
        <option value="<%= cat %>"><%= cat %></option>
      <% }); %>
    </select>
  </div>
  <button type="submit" class="btn btn-success">Dodaj transakcijo</button>
</form>
<%- include('partials/footer') %>
